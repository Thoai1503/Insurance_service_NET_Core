@{
	var contract = (Insurance_agency.Models.ModelView.ContractView)ViewBag.contract;
	var employee = new Insurance_agency.Models.ModelView.User();
	var user = new Insurance_agency.Models.ModelView.User();
	if (ViewBag.user != null)
	{
		user = (Insurance_agency.Models.ModelView.User)ViewBag.user;
	}
}
<form action="/" method="post">
	<div class="row">
		<div class="col-3">
			<span>User :</span>
			<span>@user.full_name</span>
		</div>
		<div class="col-3">
			<a href="">
				<span>Insurance :</span>
				@contract.insurance.name
			</a>
		</div>

	</div>
	<div class="row">
		<div class="col-3">
			<span>Start Date :</span>
			@contract.StartDate
		</div>
		<div class="col-3">
			<span>End Date :</span>
			@contract.EndDate
		</div>

	</div>
	<div class="row">
		<div class="col-3">
			<span>Value :</span>
			@contract.value_contract
		</div>
		<div class="col-3">
			<span>Total Paid :</span>
			@contract.total_paid
		</div>

	</div>
	<div class="row">
		<div class="col-3">
			<span>Year Paid :</span>
			@contract.year_paid
		</div>
		<div class="col-3">
			<span>Numer Year Paid :</span>
			@contract.number_year_paid
		</div>
	</div>
	<div class="row">
		<div class="col-3">
			<span>Employee :</span>
			@employee.full_name
		</div>
	</div>
</form>
