@{
    Layout = "~/Areas/EmployeeArea/Views/Shared/_EmployeeLayout.cshtml";
    @model HashSet<Insurance_agency.Models.ModelView.ContractView>
}
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tables</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active">Contract</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
                DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the
                <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>
                .
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                DataTable Example
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>No .</th>
                            <th>Product Name</th>
                            <th>User</th>

                            <th>Next Due Date</th>
                            <th>Action</th>
                          
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>No .</th>
                            <th>Product Name</th>
                            <th>User</th>
                            <th>Next Due Date</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                       @if (Model != null && Model.Count > 0)
                        {
                            int i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.id</td>
                                    <td>@item.insurance.name</td>
                                    <td>@item.user.full_name</td>
                                    <td>
                                        @if (0 < item.left_day && item.left_day<3)
                                            {
                                            <span class="badge bg-danger">Due Soon</span>
                                        }
                                        else if (item.left_day <= 0)
                                        {
                                            <span class="badge bg-warning">Overdue</span>

                                        }
                                        else
                                        {
                                            @item.next_payment_due
                                        }
                                       
                                    </td>
                                    <td>

                                        <a class="btn btn-outline-primary" href="/employeearea/contract/details?id=@item.id">Details</a>
                                      
                                        @if (0 < item.left_day && item.left_day < 3)
                                        {
                                            <button class="btn btn-outline-primary" onclick="sendMail('@item.user.email','Payment reminder','We kindly remind you that your contract payment have id @item.insurance_id is due on March 15. Timely payment is essential to maintain your account in good standing, so we appreciate your prompt attention to this matter. Thank you for your cooperation!')">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                                                    <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2m.995-14.901a1 1 0 1 0-1.99 0A5 5 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901" />
                                                </svg>
                                            </button>
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">No contracts found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
       
        
    </div>
</main>


                             
    <script>
    
        function sendMail(email, subject,content) {
            alert('Sending email to: ' + email + '\nSubject: ' + subject + '\nContent: ' + content);
            $.ajax({
                url: '/employeearea/sendmail',
                type: 'POST',
                data: { to: email, title: subject, content:content },
                success: function (response) {
                    alert('Email sent successfully!');
                },
                error: function (xhr, status, error) {
                    alert('Error sending email: ' + error);
                }
            });
        }
    </script>
