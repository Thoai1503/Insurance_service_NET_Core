@{
	Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
	HashSet<Insurance_agency.Models.ModelView.InsuranceTypeView> insuranceType = new HashSet<Insurance_agency.Models.ModelView.InsuranceTypeView>();
	if (ViewBag.insurancetype != null)
	{
		insuranceType = (HashSet<Insurance_agency.Models.ModelView.InsuranceTypeView>)ViewBag.insurancetype;
	}
    Insurance_agency.Models.ModelView.InsuranceView insurance = new Insurance_agency.Models.ModelView.InsuranceView();
    if(ViewBag.data!=null){
        insurance = (Insurance_agency.Models.ModelView.InsuranceView)ViewBag.data;
    }
}
<form action="@Url.Action("EditConfirm")" method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-2">
			<label for="name" >Name</label>

		</div>
		<div class="col-3">
			<input id="name" name="name" type="text" value="@insurance.name" />
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<label for="description" >Description</label>

		</div>
		<div class="col-3">
			<input id="description" name="description" type="text" value="@insurance.description" />
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<label for="target_id">Year Max</label>

		</div>
		<div class="col-3">
			<input id="year_max" name="year_max" type="text" value="@insurance.year_max" />
		</div>
		
	</div>
	<div class="row">
		<div class="col-2">
			<label for="target_id">Value</label>

		</div>
		<div class="col-3">
			<input id="value" name="value" type="text" value="@insurance.value" />
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<label for="eximage">ExImage</label>

		</div>
		<div class="col-3">
			<input id="eximage" name="Img" type="file"/>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<label for="name">Insurance Type</label>

		</div>
		<div class="col-3">
			<select name="insurance_type_id">
				<option value="0">Select Insurance Type</option>
				@foreach (var item in insuranceType)
				{
					if(item.id==insurance.insurance_type_id){
						<option value="@item.id" selected>@item.name</option>
					}
					else{
						<option value="@item.id">@item.name</option>
					}
				}
			</select>
		</div>
	</div>
	<input type="hidden" value="@insurance.id" name="id"/>
	<input type="hidden" value="@insurance.ex_image" name="ex_image" />
	<div class="row">
		<div class="rol-3">
			<button type="submit" class="btn btn-success">Confirm</button>
		</div>
		<div>
			<button type="reset" class="btn btn-secondary">Reset</button>
		</div>
	</div>
</form>



