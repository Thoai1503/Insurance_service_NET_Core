@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    @model Insurance_agency.Models.ModelView.User;
}



<h2 class="text-primary"><strong>Chi tiết nhân viên:</strong> @Model.full_name</h2>

<!--Create employee detail with edit form -->
<div class="row">
    <div class="col-md-6">
        <form method="post" action="/adminarea/employee/edit">
            <input type="hidden" name="id" value="@Model.id" />
            <div class="mb-3">
                <label for="fullName" class="form-label">Họ và tên</label>
                <input type="text" class="form-control" id="fullName" name="full_name" value="@Model.full_name" required readonly>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="@Model.email" required readonly>
            </div>
            <div class="mb-3">
                <label for="phoneNumber" class="form-label">Số điện thoại</label>
                <input type="text" class="form-control" id="phoneNumber" name="phone_number" value="@Model.phone" readonly>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Địa chỉ</label>
                <input type="text" class="form-control" id="address" name="address" value="@Model.address" readonly>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
        </form>
    </div>

    <div class="col-md-6">
        <h3>Thông tin chi tiết</h3>
        <p><strong>Chức vụ:</strong>Nhân viên</p>
        <p><strong>Trạng thái:</strong> @(Model.active == 1 ? "Đang hoạt động" : "Tạm ngưng")</p>
        <p><strong>Ngày tạo:</strong> 05/25/2025</p>
        <p><strong>Ngày cập nhật:</strong> 05/25/2025</p>

        <p><strong>Ghi chú:</strong> Đang chịu trách nhiệm cho 33 hợp đồng</p>

        <p><strong>Ảnh đại diện:</strong></p>

        @if (!string.IsNullOrEmpty(Model.avatar))
        {
            <img src="/Content/Admin/img/avatar/@Model.avatar" alt="Avatar" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
        }
        else
        {
            <p>Chưa có ảnh đại diện.</p>
        }

        <div class="mt-3">
            <a href="/adminarea/employee/index" class="btn btn-secondary">Quay lại danh sách nhân viên</a>
        </div>
    </div>
</div>
 <div class="mt-4">
    <h3>Danh sách hợp đồng </h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên hợp đồng</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @if(ViewBag.Contracts!= null && ViewBag.Contracts.Count > 0)
            {
                foreach (var contract in ViewBag.Contracts)
                {
                    <tr>
                        <td>@contract.id</td>
                        <td>@contract.insurance_id</td>
                        @* <td>@contract.start_date.ToString("dd/MM/yyyy")</td>
                        <td>@contract.end_date.ToString("dd/MM/yyyy")</td>
                        <td>@(contract.active ? "Đang hoạt động" : "Đã kết thúc")</td> *@
                        <td>242532</td>
                        <td>362-42</td>
                        <td>Đang hoạt động</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Không có hợp đồng nào.</td>
                </tr>
            }

        
        </tbody>
    </table>
</div>